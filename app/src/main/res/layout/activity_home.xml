<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.strangerfinder.strangerfinder.HomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/button2" />

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="368dp"
       android:layout_height="0dp"
       android:gravity="center"
       android:visibility="gone"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginBottom="8dp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="8dp"
       android:layout_marginRight="8dp"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginLeft="8dp"
       app:layout_constraintLeft_toLeftOf="parent">

       <EditText
           android:id="@+id/et_username"
           android:layout_width="368dp"
           android:layout_height="wrap_content"
           android:hint="Username"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginBottom="8dp"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="8dp"
           android:layout_marginRight="8dp"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_marginLeft="8dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintVertical_bias="0.396"
           android:layout_marginStart="8dp"
           android:layout_marginEnd="8dp" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:text="You are a: "
           app:layout_constraintBottom_toBottomOf="@+id/rg_your_sex"
           android:layout_marginBottom="33dp"
           android:layout_marginLeft="8dp"
           app:layout_constraintLeft_toLeftOf="@+id/rg_your_sex"
           android:layout_marginStart="8dp" />

       <RadioGroup
           android:id="@+id/rg_your_sex"
           android:layout_width="368dp"
           android:layout_height="wrap_content"
           android:layout_marginBottom="8dp"
           android:layout_marginLeft="8dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="8dp"
           android:gravity="center"
           android:orientation="horizontal"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/et_username"
           app:layout_constraintVertical_bias="0.158">

           <RadioButton
               android:id="@+id/rb_male"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginRight="5dp"
               android:text="You are a Boy" />

           <RadioButton
               android:id="@+id/rb_female"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginLeft="5dp"
               android:text="You are a Girl" />
       </RadioGroup>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:text="I am looking for:"
           app:layout_constraintBottom_toBottomOf="@+id/rg_looking_for"
           android:layout_marginBottom="32dp"
           android:layout_marginLeft="8dp"
           app:layout_constraintLeft_toLeftOf="@+id/rg_looking_for"
           android:layout_marginStart="8dp" />


       <RadioGroup
           android:id="@+id/rg_looking_for"
           android:layout_width="368dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_marginBottom="8dp"
           android:layout_marginLeft="8dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/et_username"
           app:layout_constraintVertical_bias="0.42"
           android:layout_marginStart="8dp">

           <RadioButton
               android:id="@+id/rb_lf_male"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="A boy"
               android:layout_marginRight="5dp"/>
           <RadioButton
               android:id="@+id/rb_lf_female"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="A girl"
               android:layout_marginLeft="5dp"/>
           <RadioButton
               android:id="@+id/rb_lf_both"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="Doens't mather"
               android:layout_marginLeft="5dp"/>
       </RadioGroup>

       <Button
           android:id="@+id/bt_start_to_chat"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="I Am Ready!"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginBottom="8dp"
           android:layout_marginRight="8dp"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_marginLeft="8dp"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="8dp"
           app:layout_constraintTop_toBottomOf="@+id/rg_looking_for"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintVertical_bias="0.772" />
   </LinearLayout>

</android.support.constraint.ConstraintLayout>
